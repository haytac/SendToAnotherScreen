<Window x:Class="SendToAnotherScreen.SysTrayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="SysTrayWindow" Height="450" Width="800">
    <tb:TaskbarIcon ToolTipText="hello world" 
  IconSource="icon.ico">
        <tb:TaskbarIcon.TrayPopup>
            <Border Background="White" BorderBrush="Orange" BorderThickness="2" CornerRadius="4" Width="160" Height="40">
                <Button Content="Click Me!" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </tb:TaskbarIcon.TrayPopup>
    </tb:TaskbarIcon>
</Window>
